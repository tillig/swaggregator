{
  "documents": [
    {
      "id": "api1",
      "swagger_url": "https://url.to.first/swagger.json"
    },
    {
      "id": "api2",
      "swagger_url": "https://url.to.second/swagger.json",
      "path_rewrite": {
        "^/sub-path-to-remove/": "",
        "(.*)/accts/(.*)": "$1/accounts/$2"
      }
    }
  ],
  "info": {
    "title": "My REST API",
    "version": "1.0"
  },
  "oauth": {
    "clientId": "my-client-id",
    "clientSecret": "my-client-secret",
    "realm": "my-oauth-realm",
    "appName": "Swagger UI",
    "securityDefinition": {
      "authorizationUrl": "https://my-identity-server/connect/authorize",
      "flow": "implicit",
      "scopes": {
        "api": "API Access"
      },
      "tokenUrl": "https://my-identity-server/connect/token",
      "type": "oauth2"
    }
  }
}